<section class="h-100 h-custom" >
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12">
                <div class="card card-registration card-registration-2 mb-2"
                    style="border-radius: 15px; border: 1px solid black; background-color: rgb(215, 223, 146);">
                    <div class="card-body p-0" >

                        <div class="justify-content-md-center bg-grey">
                            <div class="p-5 ">
                                <h3 class="fw-bold pt-1 text-center">Add Coupon</h3>
                                <hr class="my-2">
                                <form action="/addCoupon" method="post">
                                    <div class="form-group mt-3">
                                        <input required placeholder="Coupon Name" type="description" name="couponcode"
                                            class="form-control" id="description">
                                    </div>
                                    <!-- <% //if(validation.existingCoupon) {%>
                                 <p style="color: red;">Already added Coupen</p>
                                 <% //} %>   -->
                                    <div class="form-group mt-3">
                                        <input required placeholder="Coupon Value" type="number" name="couponvalue"
                                            class="form-control">
                                    </div>
                                    <div class="form-group mt-3">
                                        <input type="number" name="minbill" class="form-control"
                                            placeholder="MinimumBill">
                                    </div>
                                    <div class="form-group mt-3">
                                        <input type="date" name="expirydate" class="form-control">
                                    </div>
                                    <button type="submit" class="btn btn-primary mt-3">Add Coupon</button>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</section>

<div class="container-fluid py-4">
    <div class="row">
      <div class="col-12">
        <div class="card mb-4">
          <div class="card-header pb-0">
            <h3 class="text-center text-dark font-weight-bold mb-0">Coupon Management</h3>
          </div>
          <div class="card-body px-0 pt-0 pb-2">
            <div class="table-responsive p-3">
              <table id="example" class="table align-items-center mb-0 p-1">
                <thead class="bg-dark">
                  <tr>
                    <th class="text-center text-uppercase text-white text-sm font-weight-bolder opacity-7">Sl No</th>
                    <th class="text-center text-uppercase text-white text-sm font-weight-bolder opacity-7 ">Coupon Code</th>
                    <th class="text-center text-uppercase text-white text-sm font-weight-bolder opacity-7">Coupon Bill</th>
                    <th class="text-center text-uppercase text-white text-sm font-weight-bolder opacity-7">MinBill</th>
                    <th class="text-center text-uppercase text-white text-sm font-weight-bolder opacity-7">Expiry</th>
                    <th class="text-center text-uppercase text-white text-sm font-weight-bolder opacity-7">Status</th>
                    <th class="text-center text-uppercase text-white text-sm font-weight-bolder opacity-7">Action</th>
                  </tr>
                </thead>
                <tbody>
                    <% for(i=0 ; i<coupon.length ; i++) { %>
                  <tr>
                    <td>
                      <!-- <div class="d-flex px-2 py-1"> -->
                        <!-- <div>
                           <img src="../assets/img/team-2.jpg" class="avatar avatar-sm me-3" alt="user1"> 
                        </div> -->
                        <!-- <div class="d-flex flex-column justify-content-center"> -->
                          <h6 class="mb-0 text-center text-sm text-dark"><%=i+1 %></h6>
                          <!-- <p class="text-xs text-secondary mb-0">john@creative-tim.com</p> -->
                        <!-- </div> -->
                      </div>
                    </td>
                    <td>
                      <p class="text-sm text-center text-dark font-weight-bold mb-0"><%= coupon[i].couponCode%></p>
                      <!-- <p class="text-xs text-secondary mb-0">Organization</p> -->
                    </td>
                    <td class="align-middle text-center text-sm">
                      <span class="text-dark text-center text-sm font-weight-bold"> <%= coupon[i].couponValue %></span>
                      <!-- <span class="badge badge-sm bg-gradient-success">Online</span> -->
                    </td>
                    <td class="align-middle text-center">
                      <span class="text-dark text-center text-sm font-weight-bold"><%= coupon[i].minBill %></span>
                    </td>
                    <td class="align-middle text-center">
                        <span class="text-dark text-center text-sm font-weight-bold"><%= coupon[i].couponExpiry.toLocaleDateString() %></span>
                      </td>
                      <td class="align-middle text-center">
                        <span class="text-dark text-center text-sm font-weight-bold"> <%= coupon[i].status %></span>
                      </td>
                    <td class="align-middle text-center">
                     
                        <a href="/deleteCoupon?id=<%= coupon[i].couponCode %>" class="btn btn-danger mr-1" onclick="return confirm('Do you want to delete <%= coupon[i].couponCode%> ?')">Delete</a>
                     
                    </td>
                  </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

<script>
    $(document).ready(function () {
        $('#example').DataTable({
            "pageLength": 5
        });
    });
</script>
</script>