<section style="background-color: rgb(155, 149, 149); padding: 5rem; height: 100%; margin-top: 2rem;">
  <div class="container ">
    <div class="row justify-content-center align-items-center">
      <div class="col-md-6">
        <h2 class="text-center">Add Product</h2>
        <form
          action="/addproduct"
          method="post"
          
        >
          <label for="">Name</label>
          <input type="text" name="name" class="form-control" required/>

          <label for="">Category</label>
          <input type="text" name="category" class="form-control" required/>

          <label for="">Price</label>
          <input type="text" name="price" class="form-control" required/>

          <label for="">Description</label>
          <input type="text" name="description" class="form-control" required/>

          <label for="">Stock</label>
          <input type="text" name="stock" class="form-control" required/>

          <label for="">Image</label>
          <input type="text" name="image" class="form-control" required/>

          <button type="submit" class="btn btn-success mt-4" style="background-color: orange;">Submit</button>
        </form>
      </div>
    </div>
  </div>
</section>
<section style="background-color: rgb(218, 208, 208); padding:2rem; height: 100%; margin-top: 2rem;">
    <div class="container ">
      <div class="row mt-2">
        <h2 class="" style="margin-left:20rem ;">Product List</h2>
      </div>
      <table class="table mt-5">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Category</th>
            <th scope="col">Price</th>
            <th scope="col">Desciption</th>
            <th scope="col">Stock</th>
            <th scope="col">Image</th>
          </tr>
        </thead>
        <tbody>
          <% product.forEach(function(product) { %>
            <tr>
              <td><%=product.name %></td>
              <td><%=product.category %></td>
              <td><%=product.price %></td>
              <td><%=product.description %></td>
              <td><%=product.stock %></td>
              <td><img
                  style="width:50px;height: 50px;"
                  src=<%= product._id %>
                  alt="img"/></td>
              <td>
                <a
                  href="/admin/edit-product/{{this._id}}"
                  class="btn btn-primary"
                >Edit</a>
                <a
                  href="/admin/delete-product/{{this._id}}"
                  class="btn btn-danger"
                  onclick="return confirm('Do you want to delete {{this.Name}} ?')"
                >Delete</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </section>

