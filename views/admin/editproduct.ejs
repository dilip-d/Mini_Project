<section style="background-color: rgb(136, 172, 173); padding: 5rem; height: 100%; margin-top: 2rem;">
  <div class="container ">
    <div class="row justify-content-center align-items-center">
      <div class="col-md-6">
        <h2 class="text-center">Edit Product</h2>
        <form action="/editproduct/<%= product._id %>" method="post">
          <label for="">Name</label>
          <input type="text" name="name" class="form-control" value="<%= product.name %>" />

          <label for="">Category</label>
          <input type="text" name="category" class="form-control" value="<%= product.category %>" />

          <label for="">Price</label>
          <input type="text" name="originalPrice" class="form-control" value="<%= product.originalPrice %>" />

          <label for="">Offer</label>
          <input type="text" name="offer" class="form-control" required />

          <label for="">Description</label>
          <input type="text" name="description" class="form-control" value="<%= product.description %>" />

          <label for="">Stock</label>
          <input type="text" name="stock" class="form-control" value="<%= product.stock %>" />

          <label for="">Image</label>
          <input type="file" name="image" class="form-control" value="<%= product.image %>" />

          <button type="submit" class="btn btn-success mt-4" style="background-color: orange;">Submit</button>
        </form>
      </div>
    </div>
  </div>
</section>