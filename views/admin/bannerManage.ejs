<div class="container pt-5">
  <section style="background-color: rgb(172, 166, 166); padding: 5rem; height: 100%; margin-top: 2rem;">
    <div class="container">
      <div class="row justify-content-center align-items-center">
        <div class="col-md-6">
          <h2 class="text-center">Add Banner</h2>
          <form action="/addBanner" method="post" enctype="multipart/form-data">
            <label for="">Name</label>
            <input type="text" name="name" class="form-control" required />

            <label for="">Image</label>
            <input type="file" name="image" class="form-control" required />

            <% if(bannerValidation.banner){ %>
              <b>
                <p class="mt-2 fw-bold" style="color: red;">Already Added</p>
              </b>
              <% } %>

                <button type="submit" class="btn btn-success mt-4" style="background-color: orange;">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </section>
  </div>
  <br>
  <table id="example" class="table table-hover">
    <thead style="background-color: rgb(22, 22, 22);">
      <tr>
        <th scope="col">No.</th>
        <th scope="col">Image</th>
        <th scope="col">Banner name</th>
        <th scope="col">Delete</th>
      </tr>
    </thead>
    <tbody>
      <!-- <th scope=""> -->
      <% result.forEach(function(result,index) { %>
        <tr>
          <td scope="row">
            <%= index+1 %>
          </td>
          <td><img style="width:50px;height: 50px;" src="./banner/<%= result._id %>.jpeg" alt="" />
          </td>
          <td><span style="font-weight: 700;" class="col-md-5 d-flex">
              <%= result.name %>
            </span></td>
          <td>
            <form action="/admin/delete-banner?id=<%= result._id %>" method="post">
              <button type="submit" class="btn btn-danger"
                onclick="return confirm('Are you want to delete <%= result.name %> ? ')">
                Delete
              </button>
            </form>
          </td>
          <!-- <hr> -->
        </tr>
        <% }) %>
          <!-- </th> -->
    </tbody>
  </table>


<script>
