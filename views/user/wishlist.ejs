<section class="banner-bottom-wthreelayouts py-lg-5 py-3">
    <div class="container">
        <div class="inner-sec-shop px-lg-4 px-3">
            <h3 class="tittle-w3layouts my-lg-4 mt-3">My Wishlist</h3>
            <div class="checkout-right">
                <% if(b.wishlist==0) { %>
					<div>
						<h1 style="color: red;">Your Wishlist is Empty !</h1>
					</div>
					<% } else { %>
                <!-- <h4>Your wishlist contains:
                    <span>3 Products</span>
                </h4> -->
                <table class="timetable_sub">
                    <thead>
                        <tr>
                            <th>SL No.</th>
                            <th>Product</th>
                            <th>Product Name</th>
                            <th>Move to Cart</th>
                            <th>Remove</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% user.forEach(function(user , index) { %>
                        <tr class="rem1">

                            <td class="invert"><%= index+1 %></td>
                            <td class="invert-image">
                                <a href="/singleProductView?id=<%= user._id %>">
                                    <img src="./image/<%= user._id %>.jpeg" alt=" " class="img">
                                </a>
                            </td>
                            <td class="invert"><%=user.name %></td>
                            <td class="invert">
                                <div class="rem">
                                    <a
                                    href="/moveToCart/<%= user._id %>"
                                    class="btn btn-dark"
                                  >Move to Cart</a>
                                </div>
                            </td>	
                            <td class="invert">
                                <div class="rem">
                                    <!-- <a
                                    href="/removeFromWishlist/<%= user._id %>"
                                    class="btn btn-dark"
                                    onclick="return confirm('Do you want to remove <%=user.name %> ?')"
                                  >Remove</a> -->
                                  <button type="button" value="<%= user._id %>"
                                    class="confirm_del_btn btn btn-dark">Remove</button>
                                </div>
                            </td>	
                        </tr>
                        <% }) %> 
                    </tbody>
                </table>
                <% } %>
            </div>
        </div>

    </div>
</section>
<script src="js/jquery-2.2.3.min.js"></script>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.6.8/dist/sweetalert2.all.min.js"></script>
<!-- SweetAlert2 -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/7.2.0/sweetalert2.min.css">

<script>

    $(document).ready(function () {
        $('.confirm_del_btn').click(function (e) {

            var id = $(this).val();

            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                width: 500,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, remove it!'
            })
                .then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: "/removeFromWishlist/" + id,
                            success: function (response) {
                                Swal.fire({
                                    title: 'Removed!',
                                    width: 500,
                                    text: 'Removed!',
                                    text: 'Item has been removed.',
                                    icon: 'success'
                                }).then((confirmed) => {
                                    window.location.reload();
                                })
                            }
                        })
                    } else {
                        swal("It's safe!");
                    }
                });
        })
    })
</script>