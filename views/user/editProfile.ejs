<div class="container rounded bg-white mt-5">
    <div class="row">

        <div class="col-md-8">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="d-flex flex-row align-items-center back">
                        <a href="/userProfile" class="btn btn-dark">&#8592; Back to Profile</a>

                    </div>
                    <h2 class="text-center text-primary">Edit Profile</h2>
                </div>
                <form action="/editProfile/<%= profile._id %>" method="post">

                    <label for="">First name</label>
                    <input type="text" name="fname" class="form-control" value="<%= profile.fname %>" />

                    <label for="">Last name</label>
                    <input type="text" name="lname" class="form-control" value="<%= profile.lname %>" />

                    <label for="">Email</label>
                    <input type="text" name="email" class="form-control" value="<%= profile.email %>" />

                    <label for="">Phone Number</label>
                    <input type="text" name="phonenumber" class="form-control" value="<%= profile.phonenumber %>" />

                    <button type="submit" class="btn btn-success mt-4" style="background-color: orange;">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="js/jquery-2.2.3.min.js"></script>