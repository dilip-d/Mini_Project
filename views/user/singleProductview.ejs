<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/7.2.0/sweetalert2.min.css">

<script>

    $(document).ready(function () {
        $('.confirm_del_btn').click(function (e) {

            var id = $(this).val();

            $.ajax({
                url: "/incrementCartCount/" + id,
                success: function (response) {
                    Swal.fire({
                        position: 'middle',
                        icon: 'success',
                        title: 'Item added to cart üëç',
                        showConfirmButton: false,
                        timer: 1500
                    }).then((confirmed) => {
                        // window.location.reload();
                    })
                }
            }) 
        })
    })

    $(document).ready(function () {
        $('.wishlist_btn').click(function (e) {

            var id = $(this).val();

            $.ajax({
                url: "/addToWishlist/" + id,
                success: function (response) {
                    Swal.fire({
                        position: 'middle',
                        icon: 'success',
                        title: 'Added to wishlist ‚ù§Ô∏è',
                        showConfirmButton: false,
                        timer: 1500
                    }).then((confirmed) => {
                        // window.location.reload();
                    })
                }
            }) 
        })
    })
</script>