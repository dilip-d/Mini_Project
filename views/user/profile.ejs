<div class="page-content page-container" id="page-content">
    <div class="padding">
        <div class="row container d-flex justify-content-center">
            <div class="col-xl-12 col-md-12">
                <div class="card user-card-full">
                    <div class="row m-l-0 m-r-0">
                        <div class="col-sm-4 bg-c-lite-green user-profile">
                            <div class="card-block text-center text-white">
                                <div class="m-b-25">
                                    <img src="https://img.icons8.com/bubbles/100/000000/user.png" class="img-radius"
                                        alt="User-Profile-Image">
                                </div>
                                <h6 class="f-w-600">
                                    <%= profile.fname %>
                                </h6>
                                <p></p>
                                <i class=" mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"></i>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <div class="p-2">
                                <a href="/editProfile" class="btn btn-primary">Edit Profile</a>
                                <a href="/addAddress" class="btn btn-info mx-5">Add Address</a>
                                <a href="/orderDetails" class="btn btn-dark mx-3">Orders</a>
                            </div>
                            <div class="card-block">
                                <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Information</h6>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">First name</p>
                                        <h6 class="text f-w-400">
                                            <%= profile.fname %>
                                        </h6>
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Last name</p>
                                        <h6 class="text f-w-400">
                                            <%= profile.lname %>
                                        </h6>
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Email</p>
                                        <h6 class="text f-w-400">
                                            <%= profile.email %>
                                        </h6>
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Phone</p>
                                        <h6 class="text f-w-400">
                                            <%= profile.phonenumber %>
                                        </h6>
                                    </div>
                                    <% for(i=0; i<profile.address.length; i++) { %>
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600">Address <%= i+1 %></p>                                  
                                          <h6 class="text f-w-400"><%= profile.address[i].address %></h6>
                                          <h6 class="text f-w-400"><%= profile.address[i].city %></h6>
                                          <h6 class="text f-w-400"><%= profile.address[i].state%></h6>
                                            <h6 class="text f-w-400"><%= profile.address[i].country%></h6>
                                            <h6 class="text f-w-400"><%= profile.address[i].zip%></h6>
                                           <!-- <a href="/editProfile"> <i class='fa fa-edit' style='color: rgb(47, 0, 255)' ></i></a>
                                            <a href="/deleteAddress"><i  class="fa fa-trash-o p-3" style='color: red' ></i></a> -->
                                        
                                          </div>
                                         
                                          <% } %>
                                    <!-- <% if(!profile) { %>
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Address</p>
                                        <h6 class="text-muted f-w-400">
                                            <%= profile.address[0].address %>
                                        </h6>
                                    </div>
                                   
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Zipcode</p>
                                        <h6 class="text-muted f-w-400">
                                            <%= profile.address[0].zip %>
                                        </h6>
                                    </div>
                                    <% }else{ %>
                                        <% } %> -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="js/jquery-2.2.3.min.js"></script>